{
  "name": "microservices-automated-tests",
  "version": "1.0.0",
  "description": "Automated tests for NestJS microservices",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:user": "jest user-service.test.js",
    "test:order": "jest order-service.test.js",
    "test:inventory": "jest inventory-service.test.js",
    "test:integration": "jest integration.test.js"
  },
  "keywords": [
    "microservices",
    "nestjs",
    "testing",
    "jest",
    "integration"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "testMatch": [
      "**/*.test.js"
    ]
  }
}

